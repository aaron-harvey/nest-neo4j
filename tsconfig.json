{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "lib": [ "esnext" ],
      "sourceMap": false,
      "outDir": "lib",
      "incremental": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
    },
    "exclude": ["node_modules", "lib", "dist", "src/test"],
    "include": ["src"]
  }